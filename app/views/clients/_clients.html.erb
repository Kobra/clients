<table border=1 cellspacing=1 cellpadding=1>
  <thead>
    <tr>
      <th><%= t(:uid) %></th>
      <th><%= t(:contract) %></th>
      <th><%= t(:companyname) %></th>
      <th><%= t(:address) %></th>
      <th><%= t(:comments) %></th>
      <th><%= t(:contacts) %></th>
      <th><%= t(:phones) %></th>
      <th><%= t(:email) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= highlight(client.uid, params[:q], highlighter: '<strong><span style="color:red">\1</span></strong>') %></td>
        <td><%= highlight(client.contract, params[:q], highlighter: '<strong><span style="color:red">\1</span></strong>') %></td>
        <td><%= highlight(client.companyname, params[:q], highlighter: '<strong><span style="color:red">\1</span></strong>') %></td>
        <td><%= highlight(client.address, params[:q], highlighter: '<strong><span style="color:red">\1</span></strong>') %></td>
        <td><%= highlight(client.comments, params[:q], highlighter: '<strong><span style="color:red">\1</span></strong>') %></td>
        <td><%= highlight(client.contacts, params[:q], highlighter: '<strong><span style="color:red">\1</span></strong>') %></td>
        <td><%= highlight(client.phones, params[:q], highlighter: '<strong><span style="color:red">\1</span></strong>') %></td>
        <td><%= highlight(client.email, params[:q], highlighter: '<strong><span style="color:red">\1</span></strong>') %></td>
        <td><%= link_to t(:show), client %></td>
        <td><%= link_to t(:edit), edit_client_path(client) %></td>
        <td><%= link_to t(:delete), client, method: :delete, data: { confirm: t(:confirm) } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
